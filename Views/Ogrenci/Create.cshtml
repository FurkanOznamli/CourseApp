@model Ogrenci
@{
    ViewData["Title"] = "Öğrenci Ekle";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    <h3 class="card-title mb-4 text-center">👨‍🎓 Yeni Öğrenci Ekle</h3>

                    <form asp-controller="Ogrenci" asp-action="Create" method="post">
                        <div class="mb-3">
                            <label asp-for="OgrenciAd" class="form-label">Öğrenci Adı</label>
                            <input asp-for="OgrenciAd" class="form-control" placeholder="Örn: Ahmet" />
                            <span asp-validation-for="OgrenciAd" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="OgrenciSoyad" class="form-label">Öğrenci Soyadı</label>
                            <input asp-for="OgrenciSoyad" class="form-control" placeholder="Örn: Yılmaz" />
                            <span asp-validation-for="OgrenciSoyad" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Eposta" class="form-label">E-Posta</label>
                            <input asp-for="Eposta" class="form-control" placeholder="Örn: ahmet@example.com" />
                            <span asp-validation-for="Eposta" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Telefon" class="form-label">Telefon</label>
                            <input asp-for="Telefon" class="form-control" placeholder="Örn: 0500 000 00 00" />
                            <span asp-validation-for="Telefon" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="/Ogrenci" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left-circle me-1"></i> Geri Dön
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-check-circle me-1"></i> Kaydet
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
