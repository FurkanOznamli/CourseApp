@model Ogrenci
@{
    ViewData["Title"] = "Öğrenci Düzenle";
}

<div class="container py-4">
    <div class="row">
      
        <div class="col-lg-8 mb-4">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    <h3 class="card-title mb-4">✏️ Öğrenci Bilgilerini Güncelle</h3>

                    <form asp-controller="Ogrenci" asp-action="Edit" method="post">
                        <input type="hidden" asp-for="OgrenciId" />

                        <div class="mb-3">
                            <label asp-for="OgrenciAd" class="form-label">Ad</label>
                            <input asp-for="OgrenciAd" class="form-control" placeholder="Örn: Ayşe" />
                            <span asp-validation-for="OgrenciAd" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="OgrenciSoyad" class="form-label">Soyad</label>
                            <input asp-for="OgrenciSoyad" class="form-control" placeholder="Örn: Demir" />
                            <span asp-validation-for="OgrenciSoyad" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Eposta" class="form-label">E-Posta</label>
                            <input asp-for="Eposta" class="form-control" placeholder="Örn: ayse@example.com" />
                            <span asp-validation-for="Eposta" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Telefon" class="form-label">Telefon</label>
                            <input asp-for="Telefon" class="form-control" placeholder="Örn: 0555 123 45 67" />
                            <span asp-validation-for="Telefon" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="/Ogrenci" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left-circle me-1"></i> Geri Dön
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-save me-1"></i> Kaydet
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

  
        <div class="col-lg-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body p-4">
                    <h5 class="card-title">📚 Kayıtlı Kurslar</h5>
                    <hr />
                    @if (Model.KursKayitlari != null && Model.KursKayitlari.Any())
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var item in Model.KursKayitlari)
                            {
                                <li class="list-group-item">@item.Kurs.Baslik</li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted fst-italic">Bu öğrenci henüz hiçbir kursa kayıtlı değil.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
