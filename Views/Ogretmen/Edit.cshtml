@model Ogretmen
@{
    ViewData["Title"] = "Öğretmen Düzenle";
}

<div class="container py-4">
    <div class="row">
     
        <div class="col-lg-8 mb-4">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    <h3 class="card-title mb-4">✏️ Öğretmen Bilgilerini Güncelle</h3>

                    <form asp-controller="Ogretmen" asp-action="Edit" method="post">
                        <input type="hidden" asp-for="OgretmenId" />

                        <div class="mb-3">
                            <label asp-for="Ad" class="form-label">Ad</label>
                            <input asp-for="Ad" class="form-control" placeholder="Örn: Fatih" />
                            <span asp-validation-for="Ad" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Soyad" class="form-label">Soyad</label>
                            <input asp-for="Soyad" class="form-control" placeholder="Örn: Yılmaz" />
                            <span asp-validation-for="Soyad" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Eposta" class="form-label">E-Posta</label>
                            <input asp-for="Eposta" class="form-control" placeholder="Örn: fatih.yilmaz@example.com" />
                            <span asp-validation-for="Eposta" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Telefon" class="form-label">Telefon</label>
                            <input asp-for="Telefon" class="form-control" placeholder="Örn: 0543 123 45 67" />
                            <span asp-validation-for="Telefon" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="BaslamaTarihi" class="form-label">Başlama Tarihi</label>
                            <input asp-for="BaslamaTarihi" class="form-control" type="date" />
                            <span asp-validation-for="BaslamaTarihi" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="/Ogretmen" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left-circle me-1"></i> Geri Dön
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-save me-1"></i> Kaydet
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

       
        
        <div class="col-lg-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body p-4">
                    <h5 class="card-title">📚 Verdiği Kurslar</h5>
                    <hr />
                    <ul class="list-group list-group-flush">
                        @foreach (var item in Model.Kurslar)
                        {
                            <li class="list-group-item">@item.Baslik</li>
                        }
                    </ul>
                </div>
            </div>
        </div>
       
    </div>
</div>
