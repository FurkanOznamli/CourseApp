@model Ogretmen
@{
    ViewData["Title"] = "Öğretmeni Sil";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger shadow-sm">
                <div class="card-body p-4">
                    <h3 class="card-title text-danger text-center mb-3">
                        ⚠️ Öğretmeni Silmek Üzeresiniz
                    </h3>
                    <p class="text-center fs-5">
                        <strong>@Model.Ad @Model.Soyad</strong> isimli öğretmeni silmek istediğinize emin misiniz?
                    </p>

                    <form asp-action="Delete" method="post" class="text-center mt-4">
                        <input type="hidden" name="id" value="@Model.OgretmenId" />

                        <div class="d-flex justify-content-center gap-3">
                            <button type="submit" class="btn btn-outline-danger px-4">
                                <i class="bi bi-trash3-fill me-1"></i> Evet, Sil
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary px-4">
                                <i class="bi bi-arrow-left-circle me-1"></i> Hayır, Vazgeç
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
