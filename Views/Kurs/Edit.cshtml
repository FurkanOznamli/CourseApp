@model KursViewModel
@{
    ViewData["Title"] = "Kurs Düzenle";
}

<div class="container py-4">
    <div class="row">
     
        <div class="col-lg-8 mb-4">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    <h3 class="card-title mb-4">✏️ Kurs Bilgilerini Düzenle</h3>

                    <form asp-controller="Kurs" asp-action="Edit" method="post">
                        <input type="hidden" asp-for="KursId" />

                        <div class="mb-3">
                            <label asp-for="Baslik" class="form-label">Kurs Başlığı</label>
                            <input asp-for="Baslik" class="form-control" placeholder="Örn: Web Geliştirme" />
                            <span asp-validation-for="Baslik" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="OgretmenId" class="form-label">Öğretmen</label>
                            <select asp-for="OgretmenId" asp-items="ViewBag.Ogretmenler" class="form-select">
                                <option value="">Seçiniz</option>
                            </select>
                            <span asp-validation-for="OgretmenId" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="/Kurs" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left-circle me-1"></i> Geri Dön
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-save me-1"></i> Kaydet
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>


        <div class="col-lg-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body p-4">
                    <h5 class="card-title">👨‍🎓 Bu Kursta Kayıtlı Öğrenciler</h5>
                    <hr />
                    @if (Model.KursKayitlari != null && Model.KursKayitlari.Any())
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var item in Model.KursKayitlari)
                            {
                                <li class="list-group-item">@item.Ogrenci.AdSoyad</li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted fst-italic">Henüz öğrenci eklenmemiş.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
