
@model KursKayit
@{
    ViewData["Title"] = "Kurs Kayıt Ekle";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    <h3 class="card-title mb-4 text-center">📝 Yeni Kurs Kaydı</h3>

                    <form asp-controller="KursKayit" asp-action="Create" method="post">
                        <div class="mb-3">
                            <label asp-for="OgrenciId" class="form-label">Öğrenci</label>
                            <select asp-for="OgrenciId" asp-items="ViewBag.Ogrenciler" class="form-select">
                                <option value="">-- Öğrenci Seçiniz --</option>
                            </select>
                            <span asp-validation-for="OgrenciId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="KursId" class="form-label">Kurs</label>
                            <select asp-for="KursId" asp-items="ViewBag.Kurslar" class="form-select">
                                <option value="">-- Kurs Seçiniz --</option>
                            </select>
                            <span asp-validation-for="KursId" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="/KursKayit" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left-circle me-1"></i> Geri Dön
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-check-circle me-1"></i> Kaydet
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
